<!DOCTYPE html>
<html lang="en">
    <%- include('./Partials/head.ejs') %>
<body>

    <%- include('./Partials/nav.ejs') %>
    
    <div class="Blog's Content">
        <h2>All Blogs</h2>

        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>

                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"> <%= blog.snippet %></p>
            <% }) %>   

        <%  } else { %>
             <p>There are no blogs to display</p>
        <%  } %>
    </div>
    <%- include('./Partials/footer.ejs') %>
    
</body>
</html>